@model List<webApp_manha.Entidade.Categorias>

    @foreach(var categoria in Model)
    {
        <p>@categoria.NOME - @categoria.ID</p>
    }

<div class="card-header">
    Lista de Categorias
</div>
<div class="card-body">
    <form action="/Categoria/Lista" method="get">
    <div class="row">
        <div class="col-2">
            <a class="btn btn-success" href="/Categorias/Cadrasto">
                Nova Categoria
            </a>
        </div>
        <div class="col-5">
            
                <input name="busca" class="form-control" type="text"/>
                <button type="submit" class="btn btn-primary">
                    Pesquisar
                </button>
            </form>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categoria</th>
                <th>Ativo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var categoria in Model)
            {
                <tr>
                    <td>@categoria.ID</td>
                    <td>@categoria.NOME</td>
                    <td>
                        @if (categoria.ATIVO)
                        {
                            <input type="checkbox" checked="checked" disabled/>
                        }else
                        {
                            <input type="checkbox" disabled />
                        }
                    </td>
                    <td>
                        <a href="/Categoria/Editar/@categoria.ID" class="btn btn-warning"> Editar </a>
                        <a href="/Categoria/Editar/@categoria.ID" class="btn btn-danger"> Excluir </a>
                    </td>
                </tr>    
            }
        </tbody>
    </table>



</div>
